<h1>Study LogBook</h1>
<div class="center">
    <a class="button" href="<%=`/users/${user._id}/log_entries/new`%>">
        New Entry
    </a>
</div>
<table>
    <thead>
    <tr>
        <th>Course</th>
        <th>Semester</th>
        <th>Status</th>
        <th>Notes</th>
        <th>Logbook</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% user.logBook.forEach(logEntry => { %>
    <tr>
        <td><%= logEntry.course %></td>
        <td><%= logEntry.semester %></td>
        <td><%= logEntry.status %></td>
        <td><%= logEntry.notes %></td>
        <td><%= logEntry.logBook_id %></td>

    </tr>

    <% }) %>

    </tbody>
</table>

<br>